<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/admincss/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/admincss/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/admincss/Bootswatch.css" rel="stylesheet" />
    <link href="~/Content/admincss/Minty.css" rel="stylesheet" />


    <link href="~/Content/css/table/dataTables.bootstrap4.css" rel="stylesheet" />
    <link href="~/Content/css/fonts/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/css/form/main.css" rel="stylesheet" />
    <link href="~/Content/css/form/util.css" rel="stylesheet" />
</head>
<body>
    @if (Session["TaikhoanAdmin"] != null)
    {
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <a class="navbar-brand" href="#">Thư Viện HUFLIT</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="@Url.Action("Index","Admin")">HOME <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Sach","Admin")">SÁCH</a>
                    </li>
                    
                    @if (bool.Parse( Session["rule"].ToString() )== true)
                    {

                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Docgia", "Admin")">ĐỌC GIẢ</a>
                        </li>
                    }

                    
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("PhieuMuon","Admin")">PHIẾU MƯỢN SÁCH</a>
                    </li>

                    <li style="margin-top: 0.45em"><a href="#" style="text-decoration:none;color:#fff;">User : @Session["TenNguoiDung"]  </a></li>
                    <li>
                        <!-- Log out -->
                        @using (Html.BeginForm("Logout", "Admin", FormMethod.Post))
                        {
                            <button class="btn btn-primary" type="submit">Ðăng Xuất</button>
                        }
                    </li>

                </ul>
                @*<form class="form-inline my-2 my-lg-0">
                        <input class="form-control mr-sm-2" type="text" placeholder="Search">
                        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>

                    </form>*@
            </div>
        </nav>
        <div>
            @RenderBody()
        </div>

        <script src="~/Scripts/table/jquery.min.js"></script>
        <script src="~/Scripts/table/jquery.dataTables.js"></script>
        <script src="~/Scripts/table/jquery.easing.min.js"></script>
        <script src="~/Scripts/table/dataTables.bootstrap4.js"></script>
        <script src="~/Scripts/table/bootstrap.bundle.min.js"></script>
        <script src="~/Scripts/table/sb-admin-datatables.min.js"></script>
        <script src="~/Scripts/form/main.js"></script>
    }
</body>
</html>
