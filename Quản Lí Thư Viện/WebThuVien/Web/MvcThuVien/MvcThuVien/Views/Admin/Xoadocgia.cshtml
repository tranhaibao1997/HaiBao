@model MvcThuVien.Models.TheDocGia

@{
    ViewBag.Title = "Xoadocgia";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container">
    <h2>XÁC NHẬN THÔNG TIN THẺ ĐỌC GIẢ CẦN XÓA</h2>

    <h3>Bạn muốn xóa đọc giả này?</h3>
    <div>
        <h4>TheDocGia</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Họ tên :
            </dt>

            <dd>
                @Html.DisplayFor(model => model.HoTen)
            </dd>

            <dt>
                Tài khoản :
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TaiKhoan)
            </dd>

            <dt>
                Mật khẩu :
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MatKhau)
            </dd>

            <dt>
                Email :
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt>
                Địa chỉ :
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DiachiKH)
            </dd>

            <dt>
                Điện thoại :
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DienthoaiKH)
            </dd>

            <dt>
                Ngày sinh :
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Ngaysinh)
            </dd>

            <dt>
                Ngày lập thẻ :
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Ngaylapthe)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="XÓA" class="btn btn-danger" /> |
                @Html.ActionLink("QUAY LẠI QUẢN LÝ ĐỌC GIẢ", "Docgia")
            </div>
        }
    </div>
</div>
