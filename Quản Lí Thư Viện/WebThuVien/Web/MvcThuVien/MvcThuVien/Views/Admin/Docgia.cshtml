<div class="container">
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-user"></i> <b>QUẢN LÝ THÔNG TIN ĐỌC GIẢ</b><br />
            <p>
                <a href="@Url.Action("Themmoidocgia","Admin")"><input type="button" value="THÊM MỚI" class="btn btn-secondary" /></a>
            </p>
            <hr />
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th style="width:200px">Họ tên</th>
                            <th style="width:120px">Tài khoản</th>
                            @*<th style="width:120px">Mật khẩu</th>*@
                            <th style="width:120px">Email</th>
                            <th style="width:120px">Địa chỉ</th>
                            <th style="width:120px">Điện thoại</th>
                            <th style="width:120px">Ngày sinh</th>
                            <th style="width:120px">Ngày lập thẻ</th>
                            <th style="width:200px">Action (Edit)</th>
                            <th style="width:200px">Action (Delete)</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.HoTen</td>
                                <td>@item.TaiKhoan</td>
                                @*<td>@item.MatKhau</td>*@
                                <td>@item.Email</td>
                                <td>@item.DiachiKH</td>
                                <td>@item.DienthoaiKH</td>
                                <td>@item.Ngaysinh</td>
                                <td>@item.Ngaylapthe</td>
                                
                                <td><a href="@Url.Action("Chitietdocgia","Admin", new { id = item.MaTheDocGia })"><input type="button" value="Chi tiết" class="btn btn-info" /></a></td>
                                <td><a href="@Url.Action("Xoadocgia","Admin", new { id = item.MaTheDocGia })"><input type="button" value="Xóa" class="btn btn-warning" /></a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer small text-muted">Updated: @DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")</div>
    </div>
</div>