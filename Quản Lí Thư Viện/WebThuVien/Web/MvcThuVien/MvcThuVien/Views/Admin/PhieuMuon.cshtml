<div class="container">
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-user"></i> <b>QUẢN LÝ THÔNG TIN PHIẾU MƯỢN SÁCH</b><br />           
            <hr />
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th style="width:120px">Mã phiếu mượn</th>
                            <th style="width:120px">Tên đọc giả</th>
                            <th style="width:150px">Ngày mượn</th>
                            <th style="width:150px">Ngày trả</th>                            
                            <th style="width:200px">Action (Edit)</th>
                            <th style="width:200px">Action (Delete)</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.MaPhieuMuon</td>
                                <td>@item.TheDocGia.HoTen</td>
                                <td>@item.NgayMuon</td>                               
                                <td>@item.NgayTra</td>

                                <td><a href="@Url.Action("ChitietPhieumuon","Admin", new { id = item.MaPhieuMuon })"><input type="button" value="Chi tiết" class="btn btn-info" /></a></td>
                                <td><a href="@Url.Action("XoaPhieumuon","Admin", new { id = item.MaPhieuMuon })"><input type="button" value="Xóa" class="btn btn-warning" /></a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer small text-muted">Updated: @DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")</div>
    </div>
</div>
