@model MvcThuVien.Models.PhieuMuonSach

@{
    ViewBag.Title = "XoaPhieumuon";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <h2>XÁC NHẬN THÔNG TIN pHIẾU MƯỢN CẦN XÓA</h2>

    <h3>Bạn muốn xóa phiếu này?</h3>
    <div>
        <h4>PhieuMuonSach</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Mã thẻ đọc giả :
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MaTheDocGia)
            </dd>

            <dt>
                Tên đọc giả :
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TheDocGia.HoTen)
            </dd>

            <dt>
                Ngày mượn :
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NgayMuon)
            </dd>

            <dt>
                Ngày trả :
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NgayTra)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                @Html.ActionLink("VỀ TRANG QUẢN LÝ PHIẾU MƯỢN", "PhieuMuon")
            </div>
        }
    </div>
</div>