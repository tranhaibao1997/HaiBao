<table class="table table-hover">
    <thead>
        <tr>
            <th>Sách</th>
            <th>Số lượng</th>
            <th>Action (Edit)</th>
            <th>Action (Xóa)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="col-sm-8 col-md-6">
                    <div class="media">
                        <a class="thumbnail pull-left" href="@Url.Action("Details","ThuVien",new { id = item.iMasach })"> <img src="~/Images/@item.sAnhbia" width="100" height="150" /> </a>
                        <div class="media-body">
                            <h4 class="media-heading"><a href="@Url.Action("Details","ThuVien",new { id = item.iMasach })">@item.sTensach</a></h4>
                        </div>
                    </div>
                </td>
                @using (Html.BeginForm("CapnhatPhieumuon", "Phieumuon", new { @iMaSP = item.iMasach }))
                {
                    <td class="col-sm-1 col-md-1" style="text-align: center">
                        <input type="number" min="1" name="txtSoluong" value="@item.iSoluong" />
                    </td>
                    <td class="col-sm-1 col-md-1">
                        <input type="submit" class="btn btn-success" value="Cập Nhật" />
                    </td>
                    <td class="col-sm-1 col-md-1">
                        <a href="@Url.Action("XoaPhieumuon","Phieumuon", new { @iMaSP = item.iMasach })"><input type="button" value="Xóa" class="btn btn-warning" /></a>
                        @*@Html.ActionLink("Xóa", "XoaPhieumuon", new { @iMaSP = item.iMasach })*@
                    </td>
                }
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td>   </td>
            <td>   </td>
            <td><h5>Số lượng sách :</h5></td>
            <td class="text-right"><h5><strong>@ViewBag.Tongsoluong</strong></h5></td>
        </tr>
        <tr>
            <td>   </td>
            <td>   </td>
            <td>
                <a href="@Url.Action("XoaTatcaPhieumuon","Phieumuon")"><input type="button" value="Xóa Phiếu Mượn" class="btn btn-warning" /></a>
                @*<button type="button" class="btn btn-warning" href="">
                         @Html.ActionLink("Xóa Phiếu Mượn", "XoaTatcaPhieumuon")
                    </button>*@
            </td>
            <td>
                <a href="@Url.Action("DatPhieu","Phieumuon")"><input type="button" value="MƯỢN" class="btn btn-success" /></a>
                @*<button type="button" >
                         @Html.ActionLink("MƯỢN", "DatPhieu", "Phieumuon")
                    </button>*@
            </td>
        </tr>
    </tfoot>
</table>