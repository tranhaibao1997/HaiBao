
@{
    ViewBag.Title = "Dangnhap";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class='form animated flipInX' style="width:400px;">
    <table align="center">
        <h3 style="text-align:center">ĐĂNG NHẬP</h3>
        <h4 style="color:red;text-align:center">
            @ViewBag.Thongbao
            @ViewData["Loi1"]
            @ViewData["Loi2"]
        </h4>
        @using (Html.BeginForm())
            {
            @Html.ValidationSummary(true)
            <tr style="height:40px">
                <td>Tên đăng nhập :</td>
                <td>
                    @Html.TextBox("TenDN")
                </td>
            </tr>
                <tr style="height:40px">
                    <td align="left">Mật khẩu :</td>
                    <td>
                        @Html.Password("Matkhau")
                    </td>
                </tr>
                <tr style="height:40px">
                    <td></td>
                    <td>
                        <button class='animated infinite pulse'>Đăng nhập</button>
                    </td>
                </tr>
                <tr style="height:40px">
                    <td>Chưa có tài khoản?</td>
                    <td>
                        @Html.ActionLink("Đăng kí", "Dangky", "Nguoidung")
                    </td>
                </tr>
        }
    </table>
</div>
